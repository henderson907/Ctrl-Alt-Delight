<div class="login-container">
  <div class="login-form">
    <h2 class="login-title">Log in</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "login-form-fields") do |f| %>
      <div class="inputs">
        <div class="form-field">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
        </div>
      
        <div class="form-field">
        <%= f.label :password, class: "form-label" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
        </div>
      </div>

      <div class="outputs">
        <% if devise_mapping.rememberable? %>
          <div class="form-field checkbox-field">
            <%= f.check_box :remember_me, class: "form-checkbox" %>
            <%= f.label :remember_me, class: "checkbox-label" %>
          </div>
        <% end %>

        <div class="form-actions">
          <%= f.submit "Log in", class: "login-button" %>
        </div>
      </div>
    <% end %>

    <div class="login-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
